# Copyright (c) 2025 Matthew Hopkins / Cooper Cyber Coffee

# OpenCTI 6.x Configuration
OPENCTI_URL=http://localhost:8080
OPENCTI_TOKEN=your_api_token_here
OPENCTI_SSL_VERIFY=false

# MCP Server Configuration
MCP_SERVER_PORT=8000

# MCP Server Host Binding (Security Configuration - v0.4.2)
# Default: 127.0.0.1 (localhost only - secure by default)
# For network access: Set to 0.0.0.0 (understand security implications)
# ⚠️ Binding to 0.0.0.0 exposes the server to your network - use with caution
# Best practice: Use SSH tunneling or VPN for remote access instead
MCP_SERVER_HOST=127.0.0.1

LOG_LEVEL=INFO

# Performance Configuration
TIMEOUT_SECONDS=30
MAX_INDICATORS_PER_QUERY=1000
ENABLE_QUERY_CACHING=true
CACHE_TTL_SECONDS=300
THREAD_POOL_SIZE=4

# Rate Limiting & DoS Protection (v0.4.0+)
# Limits number of MCP tool calls per minute to prevent backend overload
# Recommended: 60 for single-user, 120 for small team, 300 for large deployment
RATE_LIMIT_CALLS_PER_MINUTE=60

# Enterprise Features
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
ENABLE_AUDIT_LOGGING=true
